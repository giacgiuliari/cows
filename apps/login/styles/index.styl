@require '../../../components/commonDeps/index.styl'

#auth-login {
  max-width: 330px;
  padding: 15px;
  margin: 0 auto;
}

#auth-login #logo {
  padding-top: 100px;
  padding-bottom: 20px;
}

#auth-login .form-control {
  position: relative;
  height: auto;
  padding: 10px;
  font-size: 16px;
}

#auth-login .form-control -webkit-box-sizing border-box -moz-box-sizing border-box {
  box-sizing: border-box;
}

#auth-login .form-control:focus {
  z-index: 2;
}

#auth-login input[type="text"] {
  margin-bottom: -1px;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
}

#auth-login input[type="password"] {
  margin-bottom: 10px;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}